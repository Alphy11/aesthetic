import React from 'react';
import { ClassNames, StyleDeclarations, CSSStyle } from '../packages/types';

declare module 'aesthetic' {
  declare export class Adapter {
    static LOCAL: string;
    static GLOBAL: string;
    fontFaces: { [key: string]: CSSStyle };
    keyframes: { [key: string]: CSSStyle };
    mediaQueries: { [key: string]: CSSStyle };
    convert(styleName: string, declarations: StyleDeclarations): StyleDeclarations;
    convertProperties(setName: string, properties: CSSStyle): CSSStyle;
    extract(setName: string, atRule: string, properties: CSSStyle, fromScope: string): void;
    extractFontFaces(setName: string, properties: CSSStyle, fromScope: string): void;
    extractKeyframes(setName: string, properties: CSSStyle, fromScope: string): void;
    extractMediaQueries(setName: string, properties: CSSStyle, fromScope: string): void;
    formatAtRules(type: string, properties: CSSStyle): CSSStyle;
    transform(styleName: string, declarations: StyleDeclarations): ClassNames;
  }

  declare export class ThemeProvider extends React.Component<*, *, *> {}

  declare export default class Aesthetic {
    adapter: Adapter;
    locked: { [key: string]: boolean };
    styles: { [key: string]: StyleDeclarations };
    classNames: { [key: string]: ClassNames };
    constructor(adapter: Adapter): this;
    lockStyling(styleName: string): this;
    setAdapter(adapter: Adapter): this;
    setStyles(styleName: string, declarations: StyleDeclarations, merge: boolean): this;
    transformStyles(styleName: string): ClassNames;
  }
}
