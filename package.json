{
  "private": true,
  "name": "aesthetic",
  "scripts": {
    "assemble": "yarn run clean && yarn run bootstrap && yarn run build && yarn test",
    "bootstrap": "lerna bootstrap --hoist",
    "bootstrap:slow": "yarn run bootstrap --concurrency=1",
    "build": "lerna run build",
    "build:verify": "node ./scripts/verify-packages.js",
    "clean": "rimraf ./packages/{*}/lib/ && lerna clean --yes",
    "coverage": "run-coverage",
    "docs": "cp ./README.md ./packages/aesthetic/",
    "eslint": "run-linter ./scripts ./tests ./packages/*/{src,tests}",
    "flow": "type-check",
    "jest": "run-tests",
    "posttest": "yarn run flow",
    "pretest": "yarn run eslint",
    "publish": "lerna publish",
    "publish:force": "lerna publish --force-publish=*",
    "test": "yarn run jest",
    "test:bundle": "yarn run build && bundle-lib ./tests/bundle.js ./tests/bundle.min.js",
    "updated": "lerna updated"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.33.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-css-modules-transform": "1.2.7",
    "babel-register": "^6.26.0",
    "chalk": "^2.2.0",
    "fs-promise": "^2.0.3",
    "glob": "^7.1.2",
    "lerna": "^2.4.0",
    "react-native": "^0.49.3"
  },
  "babel": {
    "extends": "./node_modules/@milesj/build-tool-config/babel.json5",
    "ignore": "node_modules/**/*.js",
    "plugins": [
      "css-modules-transform"
    ]
  },
  "eslintConfig": {
    "extends": "./node_modules/@milesj/build-tool-config/eslint.json5",
    "rules": {
      "no-invalid-this": "off",
      "no-magic-numbers": "off"
    }
  },
  "eslintIgnore": [
    "lib/",
    "*.min.js",
    "*.map"
  ],
  "jest": {
    "preset": "@milesj/build-tool-config",
    "roots": [
      "./packages",
      "./tests"
    ],
    "testRegex": "./packages/([-a-z]+)?/tests/.*\\.test\\.js$"
  },
  "workspaces": [
    "packages/*"
  ]
}
