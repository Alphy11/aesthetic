declare module 'aesthetic-utils' {
  import type { StyleDeclaration, AtRuleMap, AtRuleCache } from 'aesthetic';

  declare export function createStyleElement(id: string): HTMLElement;
  declare export function injectAtRules(properties: StyleDeclaration, atName: string, rules: AtRuleMap): void;
  declare export function injectFallbacks(properties: StyleDeclaration, fallbacks: StyleDeclaration): void;
  declare export function injectRuleByLookup(
    properties: StyleDeclaration,
    propName: string,
    lookup: AtRuleMap | AtRuleCache,
    flatten: boolean,
  ): void;
  declare export function isObject<T>(value: T): boolean;
  declare export function isPrimitive<T>(value: T): boolean;
  declare export function toArray<T>(value: T | T[]): T[];
}
